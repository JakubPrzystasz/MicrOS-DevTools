{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "[WORK_DIR]/scripts/build.sh clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "[WORK_DIR]/scripts/build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run QEMU",
            "type": "shell",
            "command": "cmd.exe /c \"[QEMU_PATH]\" -m 640M -drive file=build/floppy.img,format=raw,if=floppy -soundhw pcspk",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "dependsOn": [
                "Build"
            ],
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(Starting QEMU)",
                    "line": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^(Starting QEMU)",
                    "endsPattern": "^(Starting QEMU)"
                }
            }
        },
        {
            "label": "Run QEMU with debugger",
            "type": "shell",
            "command": "echo \"Starting QEMU\" & cmd.exe /c \"[QEMU_PATH]\" -m 640M -drive file=build/floppy.img,format=raw,if=floppy -S -s",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "dependsOn": [
                "Build"
            ],
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(Starting QEMU)",
                    "line": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^(Starting QEMU)",
                    "endsPattern": "^(Starting QEMU)"
                }
            }
        }
    ]
}
