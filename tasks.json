{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/build.sh",
			"args": [
				"clean"
			],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run QEMU",
            "type": "shell",
            "command": "echo \"Starting QEMU\" & [QEMU_PATH] -m 640M -drive file=build/floppy.img,format=raw,if=floppy -drive file=build/hdd.img,format=raw -boot a -soundhw pcspk",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "dependsOn": [
                "Build"
            ],
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(Starting QEMU)",
                    "line": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^(Starting QEMU)",
                    "endsPattern": "^(Starting QEMU)"
                }
            }
        },
        {
            "label": "Run QEMU with debugger",
            "type": "shell",
            "command": "echo \"Starting QEMU\" & [QEMU_PATH] -m 640M -drive file=build/floppy.img,format=raw,if=floppy -drive file=build/hdd.img,format=raw -boot a -S -s",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "dependsOn": [
                "Build"
            ],
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(Starting QEMU)",
                    "line": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^(Starting QEMU)",
                    "endsPattern": "^(Starting QEMU)"
                }
            }
        }
    ]
}
