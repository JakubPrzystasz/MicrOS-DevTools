{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "[WSL][WORK_DIR]/scripts/build.sh clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "[WSL][WORK_DIR]/scripts/build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run QEMU",
            "type": "shell",
            "command": "start -FilePath '[QEMU_PATH]' -ArgumentList '-m 640M -drive file=build/floppy.img,format=raw,if=floppy -soundhw pcspk'",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Build"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run QEMU with debugger",
            "type": "shell",
            "command": "start -FilePath '[QEMU_PATH]' -ArgumentList '-m 640M -drive file=build/floppy.img,format=raw,if=floppy -S -s'",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Build"
            ],
            "problemMatcher": []
        }
    ]
}
